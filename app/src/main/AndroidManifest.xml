<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eus.ehu.intel.tta.euskhazi">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screen.ScreenLogin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.MenuNivelActivity"
            android:label="@string/title_activity_menu_nivel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".screen.AtarikoaActivity"
            android:label="@string/title_activity_atarikoa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".screen.TipoExamenActivity"
            android:label="@string/title_activity_tipo_examen"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
